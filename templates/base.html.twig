<!DOCTYPE html>
{# base.html.twig - Base page template for ecommerce site
	All assets are to be placed in the /public directory!!
#}

<html>
	<head>
		<meta name="description" content="The Jazz Lounge Album Store Music Vinyl">
		<meta name="viewport" content="width=device-width">
		<meta name="author" content="N. Nasteff">
		<meta charset="UTF-8">

		{% block scripts %}
		<script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
		<script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
		<script type="text/javascript" src="{{ asset('slick/slick.min.js') }}"></script>
		{% endblock %}
		
		{% block stylesheets %}
		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Muli&display=swap">
		<link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="{{ asset('custom2.css') }}"/>
		<link rel="stylesheet" type="text/css" href="{{ asset('slick/slick.css') }}"/>
		<link rel="stylesheet" type="text/css" href="{{ asset('slick/slick-theme.css') }}"/>
		{% endblock %}
		
		{# Page title #}
			 
		<title>
			{% block title %}The Jazz Lounge
			{% endblock %}
		</title>
	</head>

	{# Begin template header. Can be a text or image logo
	 Header includes slideout menu and it's button #}
	
	<div class="header_custom" style="font-family: 'Muli', serif;">
		<span style="left:0;font-size:30px;cursor:pointer;margin-left:15px;position:fixed;" onclick="openNav()">&#9776;</span>
		<h2>
			The Jazz Lounge
		</h2>
	</div>
	<body>
		<br><br>
		<div id="navbar" class="sidenav">
			<a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
			<br>
			{% if is_granted('IS_AUTHENTICATED_FULLY') %}
				<a href="{{ path("home") }}">Home</a>
				<a href="{{ path("browse") }}">Browse</a>
				<a href="{{ path("view_cart") }}">Cart</a>
				<a href="">My Account</a>
				<a href="{{ path("contact") }}">Contact</a>
				<a href="{{ path("logout") }}">Logout</a>

			{% else %}
				<a href="{{ path("home") }}">Home</a>
				<a href="{{ path("browse") }}">Browse</a>
				<a href="{{ path("login") }}">Login / Register</a>
				<a href="{{ path("contact") }}">Contact</a>

			{% endif %}
		</div>

		{# End Header #}

		{# Toast messages for errors / confirmations #}
		{% block alert %}
		{% if toast is defined %}
		<div class="{{toast.type}}">{{toast.message}}</div>
    {% endif %}
		{% endblock %}

		
		<div id="body_main" class="body_main">
		{% block body %}
		{% endblock %}

		{% block javascripts %}
		{% endblock %}
			</div>
		</body>
		<script>
			function openNav() {
document.getElementById("navbar").style.width = "300px"
document.getElementById("body_main").style.opacity = "0";
}

function closeNav() {
document.getElementById("navbar").style.width = "0";
document.getElementById("body_main").style.opacity = "1";
}
		</script>

	</html>
