{# templates/registration/index.html.twig #} 
{% extends 'base.html.twig' %}
{% block body %}


  <h3 class="title_ani">
   Registration
  </h3>
<div class="container" style="position: relative; width:350px; margin-left: auto; margin-right:auto;">

  <div class="row justify-content-sm-center">
    <div class="col-sm">
      <div class="card bg-light mb-3 mt-5">
        <div class="card-body">
          {{ form_start(form) }}
          <div class="form_group">
            <div class="col-sm">{{ form_row(form.name, {'label' : 'Full Name', 'attr': {'class': 'form-control'}}) }}
          </div>
          </div>
          <div class="form_group">
            <div class="col">
              {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
          </div>
          <div class="form_group">
            <div class="col">
              {{ form_row(form.password.first, {'attr': {'class':
              'form-control'}}) }}
            </div>
          </div>
          <div class="form_group">
            <div class="col">
              {{ form_row(form.password.second, {'attr': {'class':
              'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
            <div class="col"><br>
              <button type="submit" class="btn btn-primary">
                <i class="fa fa-btn fa-user"></i> Register
              </button>
            </div>
          </div>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</div>
<br>
{% endblock %}